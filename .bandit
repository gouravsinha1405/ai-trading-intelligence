[bandit]
# Bandit configuration for AI Trading Platform

# Exclude directories we don't want to scan
exclude_dirs = ["venv", "env", ".venv", ".env", "node_modules", "__pycache__", ".git"]

# Skip certain test patterns
skips = ["B101"]  # Skip assert_used tests as they're common in development

# Only scan our source code
targets = ["src", "pages", "main.py", "tests"]

# Exclude specific test IDs that are false positives
# B101: assert_used - Common in development and tests
# B110: try_except_pass - Sometimes needed for cleanup
# B311: random - OK for non-cryptographic purposes

# Security level
level = "LOW"
confidence = "HIGH"
